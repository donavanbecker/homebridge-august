{
  "pluginAlias": "August",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "default": "August"
      },
      "credentials": {
        "type": "object",
        "properties": {
          "augustId": {
            "title": "August ID",
            "type": "string",
            "x-schema-form": {
              "type": "email"
            }
          },
          "password": {
            "title": "August Password",
            "type": "string",
            "x-schema-form": {
              "type": "password"
            }
          },
          "notice": {
            "title": "Notice",
            "type": "string",
            "default": "Keep your tokens a secret!"
          }
        },
        "required": ["augustId", "password", "notice"]
      }
    },
    "required": ["name", "credentials"]
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "August Account Info",
      "expandable": true,
      "expanded": false,
      "items": [
        "credentials.augustId",
        "credentials.password"
      ]
    }
  ]
}
